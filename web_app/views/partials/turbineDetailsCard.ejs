<div class="card">
  <div class="details">
    <div class="attributes">
      <div class="attribute"><%= turbine.name %></div>
      <div class="attribute">Company <%= user.company %></div>
      <div class="attribute">Created at <%= turbine.constructionYear %></div>
      <div class="attribute">Contact: <%= user.mail %>, <%= user.phone %></div>
      <div class="attribute">Produced energy: <%= turbineData.powerGenerated %> KW</span></div>
    </div>
    <div class="image"><img src=<%= turbine.imageLink %> alt="detail image" /></div>
  </div>

  <div class="buttons">
    <button>Stop</button>
    <button>Set Private</button>
    <button>Delete</button>
  </div>
</div>
