<html>
  <head>
    <title>Create Turbine</title>
    <% var dir = process.cwd() %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Exo+2:wght@100&display=swap" rel="stylesheet">
    <%- include(dir+'/public/css/createTurbinePage'); %>
    <%- include(dir+'/views/scripts/renderMap'); %>
  </head>
  <body>
    <div class="wrapper">
      <div id="map"></div>
      <div class="configuration-panel">
        <div class="attribute-wrapper">
          <div class="attribute"><span id="location"></span></div>
          <div class="attribute">Latitude: <span id="lat"></span></div>
          <div class="attribute">Longitude: <span id="lng"></span></div>
          <div class="attribute">Wind speed: <span id="wind"></span> mph</div>
          <div class="attribute">Temperature: <span id="temperature"></span> Â°C</div>
          <div class="attribute">Humidity: <span id="humidity"></span> g/m<sup>3</sup></div>
          <div class="attribute">Altitude: <span id="altitude"></span> m</div>
          <div class="attribute">Soil type: <span id="soil-type"></span></div>
        </div>
          <form class="form" action="/" method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Turbine name">
          
            <label for="year">Construction year</label>
            <input type="number" id="year" name="year" min="1990" max="2022" step="1" value="2022" placeholder="Turbine Construction year">

            <label for="image">Image Link</label>
            <input type="text" id="image" name="image" placeholder="Turbine image link">

            <input type="submit" value="Create">
          </form>
      </div>
    </div>

    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA0m_3MppCVS4i2BKqDXvqN_Cev4apSnEw&callback=initMap&v=weekly"
        defer
    ></script>
  </body>
</html>
