<!DOCTYPE html>
<html lang="ro">
  <% var dir = process.cwd() %> <link rel="icon"
  href=https://webprojectrdv.s3.amazonaws.com/favicon.png>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include (dir+'/public/scripts/protectedRouteScript'); %> <%-
    include(dir+'/public/css/ownedPageStyle'); %> <%-
    include(dir+'/public/css/navBarStyle'); %> <%-
    include(dir+'/public/css/filtersStyle'); %>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Jura:wght@300&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <%- include(dir+'/public/scripts/chartCreation'); %>
    <title>Owned turbines</title>
  </head>
  <body>
    <%- include(dir + "/views/partials/navBar") %> <%- include(dir +
    "/views/partials/filters",{companies:{}, queryObject, isPublic:false}) %>
    <div class="sideButtonsWrapper">
      <div class="sideButton tooltip" onclick="location.href='/pages/createTurbine'">
        <span class="tooltiptext">Add Turbine</span>
        <img src="https://webprojectrdv.s3.amazonaws.com/addIcon.png">
      </div>
      <div class="sideButton tooltip" onclick="downloadTurbinesCSV()">
        <span class="tooltiptext">Export Turbines to CSV</span>
        <img src="https://cdn-icons-png.flaticon.com/512/724/724827.png">
      </div>
    </div>
    <%- include(dir + "/public/scripts/turbineCSV", {userId}) %>

    <% if(turbines.length > 0){ %>
      <div class="cardList">
        <% for(turbine of turbines) {%> <%- include(dir +
        "/views/partials/ownedTurbine", {turbine:turbine,
        chart:chartData[turbine._id + 'chart']}) %> <% } %>
      </div>
    <% } else{ %>  
      <div class="no-turbines"><p>You don't own any turbines</p></div>
    <% } %>

    <%- include (dir+'/public/scripts/protectedRouteScript'); %> <%- include
    (dir+'/public/scripts/publicownedPageScript'); %>
    <p>
      <a href="http://jigsaw.w3.org/css-validator/check/referer">
        <img
          style="border: 0; width: 88px; height: 31px"
          src="http://jigsaw.w3.org/css-validator/images/vcss-blue"
          alt="CSS valid!"
        />
      </a>
    </p>
  </body>
</html>
