<!DOCTYPE html>
<html>
  <% var dir = process.cwd() %> <%- include(dir+'/public/css/registerStyle'); %>
  <link rel="icon" href=https://webprojectrdv.s3.amazonaws.com/favicon.png>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Exo+2:wght@100&display=swap"
    rel="stylesheet"
  />
  <head>
    <title>Register</title>
  </head>
  <body>
    <p id="title1">
      Wind
      <span id="title2">Turbine Management</span>
    </p>
    <form class="signup">
      <label for="chk" aria-hidden="true">Sign up</label>
      <input type="text" id="nume" name="nume" placeholder="Nume" />
      <input type="text" id="prenume" name="prenume" placeholder="Prenume" />
      <input type="text" id="firma" name="Firma" placeholder="Firma" />
      <input type="text" id="cnp" name="CNP" placeholder="CNP" />
      <input type="mail" id="registermail" name="mail" placeholder="Mail" />
      <input type="number" id="phone" name="phone" placeholder="Phone number" />
      <input type="text" id="adresa" name="adresa" placeholder="Address" />
      <input
        type="password"
        id="registerpass"
        name="pswd"
        placeholder="Password"
      />
      <input id="sign" type="submit" value="Sign Up" />
      <p id="errormessage"></p>

      <div class="buttons">
        <button
          class="bottomButtons"
          type="button"
          onclick="location.href='/pages/resetpass'"
        >
          Forgot Password
        </button>
        <button
          class="bottomButtons"
          type="button"
          onclick="location.href='/pages/login'"
        >
          Login
        </button>
      </div>
    </form>

    <%- include (dir+'/public/scripts/registerScript'); %> <%- include
    (dir+'/public/scripts/protectedRouteLoginScript'); %>
  </body>
</html>
